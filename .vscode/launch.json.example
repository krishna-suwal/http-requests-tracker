	"version": "0.2.0",
	"configurations": [
		{
			"name": "Listen for Xdebug (Local by Flywheel)",
			"type": "php",
			"request": "launch",
			"port": 9000,
			"xdebugSettings": {
				"max_children": 128,
				"max_data": 1024,
				"max_depth": 3,
				"show_hidden": 1
			}
		},
		{
			"name": "Listen for Xdebug",
			"type": "php",
			"request": "launch",
			"port": 9000
		},
		{
			"name": "Attach to MS Edge",
			"type": "pwa-msedge",
			"request": "attach",
			"port": 9222,
			// "urlFilter": "http://dev-site.local/*",
			"webRoot": "C:\\Users\\krish\\Local Sites\\dev-site\\app\\public"
		},
		{
			"name": "Attach to Chrome",
			"type": "pwa-chrome",
			"request": "attach",
			"port": 9223,
			"webRoot": "C:\\Users\\krish\\Local Sites\\dev-site\\app\\public"
		},
		{
			"name": "Launch currently open script",
			"type": "php",
			"request": "launch",
			"program": "${file}",
			"cwd": "${fileDirname}",
			"port": 9000
		},
	]
}
